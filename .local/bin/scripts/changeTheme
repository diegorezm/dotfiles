#!/bin/bash 

declare -a ops=("Catppuccin macchiato" 
"Ayu Dark"
"gruvbox"
)

esc=$(printf '%s\n'  "${ops[@]}" | dmenu  -p "Choose one:")

if [ -z "$esc" ]
then
  exit
fi

change_qtile () {
  qtile_path="$HOME/.config/qtile/"
  case "$esc" in
    "${ops[0]}") 
      cd $qtile_path
      python3 "$HOME/.config/qtile/changeTheme.py" --theme=1
    ;;
    "${ops[1]}") 
      cd $qtile_path
      python3 "$HOME/.config/qtile/changeTheme.py" --theme=2
    ;;
    "${ops[2]}") 
      cd $qtile_path
      python3 "$HOME/.config/qtile/changeTheme.py" --theme=3
    ;;
    *) 
      cd $qtile_path
      python3 "$HOME/.config/qtile/changeTheme.py" --theme=1
    ;;
  esac
  qtile cmd-obj -o cmd -f reload_config
}

change_alacritty(){
  alacritty_path="$HOME/.config/alacritty" 
  case "$esc" in
    "${ops[0]}") 
      cd $alacritty_path
      cp "./themes/macchiato.toml" "theme.toml"
    ;;
    
    "${ops[1]}") 
      cd $alacritty_path
      cp "./themes/ayudark.toml" "theme.toml"
    ;;
  esac
}

change_kitty () {
  kitty_path="$HOME/.config/kitty/"

  case "$esc" in
    "${ops[0]}") 
      cd $kitty_path
      cp "colors/macchiato.conf"  "colorscheme.conf"
      ;;

    "${ops[1]}") 
      cd $kitty_path
      cp "colors/ayu.conf"  "colorscheme.conf"
      ;;

      *) echo default
      ;;
  esac
}

change_neovim () {
  case "$esc" in
    "${ops[0]}") 
        echo 'vim.cmd.colorscheme "catppuccin-macchiato"' > "$HOME/.config/nvim/lua/plugin/config/colorscheme.lua"
      ;;
    "${ops[1]}") 
        echo 'vim.cmd.colorscheme "ayu-dark"' > "$HOME/.config/nvim/lua/plugin/config/colorscheme.lua"
      ;;
    "${ops[2]}") 
        echo 'vim.cmd.colorscheme "gruvbox"' > "$HOME/.config/nvim/lua/plugin/config/colorscheme.lua"
      ;;
  esac
}

change_xresources(){
   xpath="$HOME/.config/Xresources/"
  case "$esc" in
    "${ops[0]}") 
        cd $xpath
        cp "colorschemes/macchiato.Xresources" "$xpath/colors.Xresources"
      ;;
    "${ops[1]}") 
        cd $xpath
        cp "colorschemes/ayu-dark.Xresources" "$xpath/colors.Xresources"
      ;;
    "${ops[2]}") 
        cd $xpath
        cp "colorschemes/gruvbox.Xresources" "$xpath/colors.Xresources"
      ;;
  esac
  xrdb -merge ~/.config/Xresources/Xresources 
}

change_kitty && change_qtile && change_neovim && change_xresources && change_alacritty
